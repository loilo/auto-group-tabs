{
  "type": "module",
  "scripts": {
    "dev": "wireit",
    "dev:test": "wireit",
    "build:options": "wireit",
    "build:background": "wireit",
    "test:types": "wireit",
    "test:lint": "wireit",
    "test:unit": "wireit",
    "test:browser": "wireit",
    "test": "wireit",
    "build": "wireit",
    "pack": "wireit",
    "deploy": "wireit"
  },
  "wireit": {
    "dev": {
      "command": "vite --host",
      "service": true,
      "files": [
        "src/**/*",
        "!src/node_modules",
        "vite.config.ts"
      ]
    },
    "dev:test": {
      "command": "vitest",
      "service": true
    },
    "build:options": {
      "command": "vite build",
      "files": [
        "src/**/*",
        "!src/node_modules",
        "vite.config.ts"
      ],
      "output": [
        "extension"
      ]
    },
    "build:background": {
      "command": "rolldown -c rolldown-background.config.ts",
      "files": [
        "src/background.ts"
      ],
      "output": [
        "extension/background.js"
      ],
      "dependencies": [
        "build:options"
      ]
    },
    "test:types": {
      "command": "vue-tsc --noEmit",
      "files": [
        "src/**/*",
        "!src/node_modules",
        "tsconfig.json",
        "tsconfig.node.json"
      ],
      "output": []
    },
    "test:lint": {
      "command": "oxlint src --type-aware",
      "files": [
        "src/**/*",
        "!src/node_modules",
        ".oxlintrc.json"
      ],
      "output": []
    },
    "test:unit": {
      "command": "vitest run",
      "files": [
        "src/**/*",
        "!src/node_modules"
      ],
      "output": [
        "src/node_modules/.vite/vitest"
      ]
    },
    "test:browser": {
      "command": "playwright test",
      "files": [
        "src/**/*",
        "!src/node_modules",
        "playwright.config.ts"
      ],
      "output": [
        "playwright-report",
        "test-results"
      ],
      "dependencies": [
        "dev"
      ]
    },
    "test": {
      "dependencies": [
        "test:types",
        "test:lint",
        "test:unit",
        "test:browser"
      ]
    },
    "build": {
      "dependencies": [
        "test",
        "build:options",
        "build:background"
      ]
    },
    "pack": {
      "command": "node pack",
      "files": [
        "extension/**/*",
        "pack.js"
      ],
      "output": [
        "auto-group-tabs.zip"
      ],
      "dependencies": [
        "build"
      ]
    },
    "deploy": {
      "dependencies": [
        "pack"
      ]
    }
  },
  "dependencies": {
    "@babel/types": "^7.28.4",
    "@vueuse/core": "^13.9.0",
    "@vueuse/shared": "^13.9.0",
    "destr": "^2.0.5",
    "gsap": "^3.13.0",
    "monomitter": "^2.0.0",
    "php-date": "^4.0.1",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vuedraggable": "^4.1.0",
    "vuetify": "^3.10.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/chrome": "^0.1.31",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/compiler-sfc": "^3.5.22",
    "archiver": "^7.0.1",
    "oxlint": "^1.23.0",
    "oxlint-tsgolint": "^0.2.0",
    "rolldown": "^1.0.0-beta.44",
    "tsdown": "^0.15.8",
    "type-fest": "^5.1.0",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-static-copy": "^3.1.4",
    "vite-plugin-vuetify": "^2.1.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.1",
    "wireit": "^0.14.12"
  }
}
